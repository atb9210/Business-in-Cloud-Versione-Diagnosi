# Diagpro - Environment Variables for Dokploy Deployment
# Copy this file and set the values for your production environment

# Application
APP_NAME="Diagpro"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (MySQL)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=diagpro
DB_USERNAME=diagpro
DB_PASSWORD=GENERARE_PASSWORD_SICURA

# Database Root Password (per MySQL container)
DB_ROOT_PASSWORD=GENERARE_PASSWORD_ROOT_SICURA

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=GENERARE_PASSWORD_REDIS_SICURA
REDIS_PORT=6379

# Cache, Session, Queue
CACHE_DRIVER=redis
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# Filesystem
FILESYSTEM_DISK=local
BROADCAST_DRIVER=log

# Mail (configure for your SMTP provider)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Docker specific
CONTAINER_ROLE=app
DB_SEED=false

# Filament Admin Panel
FILAMENT_DOMAIN=your-domain.com
FILAMENT_PATH=admin

# Optional: AWS S3 for file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
